---
import Input from "../components/Input";
---

<html>
    <head></head>
    <body>
        <div
            class="relative h-full w-full bg-[url('/images/background.jpg')] bg-no-repeat bg-center bg-fixed bg-cover"
        >
            <div class="bg-black w-full h-full md:bg-opacity-50">
                <nav class="px-12 py-6">
                    <img src="/images/logo.svg" alt="Logo" class="h-11" />
                </nav>
                <div class="flex justify-center">
                    <div
                        class="bg-black bg-opacity-70 pb-10 pt-14 px-16 self-center rounded"
                    >
                        <h2 class="text-white text-32px mb-8 font-semibold">
                            Sign In
                        </h2>
                        <div class="flex flex-col gap-4">
                            <Input client:load label="Email or phone number" onChange={() => {}} id="email" type="email" value=""/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>

<style>
    body {
        @apply bg-zinc-900 h-full overflow-x-hidden;
    }

    html {
        @apply h-full;
    }
</style>
