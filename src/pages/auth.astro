---
import Input from "../components/Input";
---

<html>
    <head></head>
    <body>
        <div
            class="relative h-full w-full bg-[url('/images/background.jpg')] bg-no-repeat bg-center bg-fixed bg-cover"
        >
            <div class="bg-black w-full h-full lg:bg-opacity-50">
                <nav class="px-12 py-5">
                    <img src="/images/logo.svg" alt="Logo" class="h-12" />
                </nav>
                <div class="flex justify-center">
                    <div
                        class="bg-black bg-opacity-70 px-16 py-16 self-center mt-2 lg:w-2/5 lg:max-w-md rounded-md w-full"
                    >
                        <h2 class="text-white text-4xl mb-8 font-semibold">
                            Sign In
                        </h2>
                        <div class="flex flex-col gap-4">
                            <Input/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>

<style>
    body {
        @apply bg-zinc-900 h-full overflow-x-hidden;
    }

    html {
        @apply h-full;
    }
</style>
